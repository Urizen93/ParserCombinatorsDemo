@page "/news"
@inject NewsBrowserViewModel ViewModel

<PageTitle>News</PageTitle>

<div Class="d-flex flex-column align-top">
    <div class="d-flex flex-row gap-4" style="min-height: 60px">
        <MudText Class="d-flex align-stretch flex-grow-1 p-1 flex-basis-0">
            News filtered for the selected user
        </MudText>

        <ImpersonatedUserInfo
            ViewModel="ViewModel.UserImpersonation"
            Class="d-flex align-stretch flex-grow-1 p-1 flex-basis-0"/>
    </div>
    
    <div class="d-flex flex-row justify-content-between gap-4">
        <NewsDisplay ViewModel="@ViewModel.News"
                     Class="d-flex align-stretch flex-grow-1 p-3 flex-basis-0" />

        <UserSelector ViewModel="@ViewModel.UserImpersonation"
                      Class="d-flex align-stretch flex-grow-1 p-3 flex-basis-0" />
    </div>
</div>